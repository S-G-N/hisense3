html, input
  font-family: "AR PL UMing CN"
  font-weight: 700
  color: #fff

body
  background: url(../../img/epgBg.png) no-repeat
  background-size: cover
  overflow: hidden

@media screen and (width: 1920px)
  html
    font-size: 32px

  body
    width: 1920px
    height: 1080px

@media screen and (width: 3840px)
  html
    font-size: 64px

  body
    width: 3840px
    height: 2160px

@media screen and (width: 1366px)
  html
    font-size: 23px

  body
    width: 1366px
    height: 768px

@media screen and (width: 1280px)
  html
    width: 1280px
    height: 720px
    font-size: 21.33px

  body
    width: 100%
    height: 100%

//reset css
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header,
menu, nav, output, ruby, section, summary,
time, mark, audio, video, input
  margin: 0
  padding: 0
  border: 0
  font-weight: normal
  vertical-align: baseline

a
  color: #fff
  text-decoration: none
  -webkit-backface-visibility: hidden

i
  font-style: normal

img
  width: 100%
  height: 100%
  display: block

ul,li
  list-style: none
  display: inline-block
  color: #fff

div:focus, div
  outline: none !important

.fl
  float: left

.fr
  float: right

.Tip
  color: #F4AC00

/*清除浮动*/
.clearfix::after,
.clearfix::before
  content: ".";
  height: 0
  line-height: 0
  display: block
  visibility: hidden
  clear: both

.consolepanel
  display: block
  position: fixed
  width: 30%
  height: 15%
  background: red
  z-index: 2
  top: 0
  left: 0
  opacity: 0.8
  color: #FFFFFF
  font-size: 1rem
