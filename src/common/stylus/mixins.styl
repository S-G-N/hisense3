/*split line*/
splitLine()
  position:relative
  &:after
    content: ''
    position: absolute
    bottom: 0
    left: 0
    display: block
    background-size: 100%
    background-repeat: no-repeat
    width: 80%
    height: 0.0625rem
    margin-left: 10%
    background-image: url('data:image/png;base64,')
/*1px像素边框*/
border-1px($color)
  position:relative
  &:after
    content: ''
    position: absolute
    bottom: 0
    left: 0
    display: block
    width: 100%
    border-top: 1px solid $color

border-none()
  &:after
    display: none



/*2倍和3倍图片*/
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

 